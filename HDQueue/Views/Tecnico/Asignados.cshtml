@model IEnumerable<HDQueue.Data.Entities.Ticket>

@{
    ViewBag.Title = "Asignado";
}

<h2>Asignados</h2>

<table class="table">
    <tr>
        <th>
            
            @Html.Label("Cliente")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contacto)
        </th>
        <th>
            @Html.Label("Tecnico")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Nombre)                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contacto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TecnicoAsignado.Nombre)
            </td>
            <td>
                @Html.ActionLink("Transferir", "Transferir", new { id = item.Id }) |
                @Html.ActionLink("Cerrar", "Cerrar", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, returnUrl = "/Tecnico/Asignados" })
            </td>
        </tr>
    }

</table>
